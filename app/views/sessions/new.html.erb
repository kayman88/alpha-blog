<h1 align='center'>Login</h1>

<%= form_for( :session , :html  => {class: "form-horizontal" , role: "form"} , url: login_path )do |a| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= a.label :email %>
        </div>
        <div class="col-sm-7">
          <%= a.email_field :email ,  class: "form-control", placeholder: "Enter your email"  %>    
        </div>
      </div>
      
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= a.label :password %>
        </div>
        <div class="col-sm-7">
          <%= a.password_field :password , class: "form-control", placeholder: "Enter a password", autocomplete:  "off"  %>    
        </div>
      </div>
      
      <div class="form-group">
        <div class="col-sm-offset-5 col-sm-7">
        <%= a.submit "Login", class: 'btn btn-primary btn-lg'  %>
        </div>
      </div>
      
    <%end %>
    <div class="col-sm-offset-5 col-sm-7">
        [ <%= link_to 'Back to all articles', articles_path %> ]
    </div>