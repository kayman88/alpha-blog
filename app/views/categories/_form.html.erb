<%= render 'shared/errors', :obj => @category %>

    <%= form_for( @category, :html  => {class: "form-horizontal" , role: "form"} )do |a| %>
      <div class="form-group">
        <div class="control-label col-sm-2">
          <%= a.label :name %>
        </div>
        <div class="col-sm-7">
          <%= a.text_field :name , class: "form-control", placeholder: "Enter category name" , autofocus: true %>    
        </div>
      </div>
      
      <div class="form-group">
        <div class="col-sm-offset-5 col-sm-7">
        <%= a.submit  class: 'btn btn-primary btn-lg' %>
        </div>
      </div>
      
    <%end %>
    <div class="col-sm-offset-5 col-sm-7">
        [ <%= link_to 'Back to all articles', articles_path %> ]
    </div>